<separator label="Session" />
<item label="Reload Openbox Configuration">
  <action name="Reconfigure"></action>
</item>

<menu label="Exit" id="exit-menu">
  <item label="Logout">
    <action name="Exit"/>
  </item>

  <item label="Reboot">
    <action name="Execute">
      <prompt>
        Reboot the computer?
      </prompt>
      <execute>
        sudo shutdown -r now
      </execute>
    </action>
  </item>

  <item label="Shutdown">
    <action name="Execute">
      <prompt>
        Turn off the computer?
      </prompt>
      <execute>
        sudo shutdown -h now
      </execute>
    </action>
  </item>
</menu>
